body {
  user-select: auto;
  &.dragging { user-select: none; }
  background: #f6f6f6;
  text-align: center;
  font-family: sans-serif;
}

#main {
  /*@include container;*/
  overflow: visible;
}

.slide {
  background: #e3e3e3;
  margin: 0 auto;
  width: 900px;
  height: 40px;
}

.block {
  display: inline-block;
  background: #a0df81;
  margin: 0 4px 0 1px;
  height: 100%;

  &.hover {
    box-shadow: 0 0 0 1px #000;
  }

  &:last-child { margin: 0; }
  &.empty {
    background: #ddd;
  }
}
